{
  "name": "Block Scripts By Default",
  "short_name": "Block scripts",
  "description": "Only allowes execution of javscript if the page is marked as trustworthy.",
  "author": "veto@myridia.com",
  "version": "1.8.4",
  "manifest_version": 2,
  "permissions": [
    "storage",
    "contextMenus",
    "<all_urls>",
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "downloads",
    "menus",
    "webNavigation",
    "history"
  ],
  "browser_action": {
    "default_icon": {
      "32": "data/icons/block.png",
      "64": "data/icons/block.png"
    }
  },

  "page_action": {
    "browser_style": true,
    "default_icon": {
      "32": "data/icons/block.png",
      "64": "data/icons/block.png"

    },
    "default_title": "Whitelist Info"
  },
  "background": {
    "persistent": true,
    "scripts": [
      "background.js"
    ]
  },
  "developer": {
    "name": "fuddl",
    "url": "https://github.com/fuddl/Block-Scripts-By-Default"
  },
  "homepage_url": "https://github.com/fuddl/Block-Scripts-By-Default",
  "icons": {
    "16": "data/icons/scroll.png",
    "32": "data/icons/scroll.png",
    "64": "data/icons/scroll.png"
  },
  "options_ui": {
    "page": "data/options/index.html",
    "chrome_style": true
  },

  "applications": {
    "gecko": {
      "id": "veto@myridia.com",
      "strict_min_version": "50.0"
    }
  }

}